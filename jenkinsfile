pipeline {
    agent any
    environment {
        PY_HOME = tool 'Default'
        PATH = "${PY_HOME}\\;${PY_HOME}\\Scripts\\;${PATH}"
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Run Python Script') {
            steps {
                // Check Python version
                bat 'Python --version'

            }
        }
    }
}
