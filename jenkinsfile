pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Run Python Script') {
            steps {
                // Check Python version
                bat '"C:\\Users\\Manav\\AppData\\Local\\Programs\\Python\\Python312\\python.exe" --version'

                // Run your script
                bat '"C:\\Users\\Manav\\AppData\\Local\\Programs\\Python\\Python312\\python.exe" script.py'
            }
        }
    }
}
