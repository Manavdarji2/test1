pipeline {
    agent any
    environment {
        PY_HOME = tool name: 'Default', type: 'jenkins.plugins.shiningpanda.tools.PythonInstallation'
        PATH = "${PY_HOME}\\;${PY_HOME}\\Scripts\\;${env.PATH}"
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Run Python Script') {
            steps {
                // Check Python version
                bat 'Python --version'
                bat 'pip install -r requirements.txt'
                bat 'python ml_pipeline.py'
            }
        }
    }
}
